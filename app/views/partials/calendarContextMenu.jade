        {{contextMenuOptions[2]}}
        span.glyphicon.glyphicon-ok.pull-right(style= "display: {{leave.type == leaveTypes[2].type ? 'inline-block' : 'none'}}")
    li(style= "display: {{ showContextMenu ? 'block' : 'none'}}")
      a(ng-click="applyLeave(cell.date, contextMenuOptions[3], {{ leave.type == leaveTypes[3].type ? '0': '1'}})") 
        {{contextMenuOptions[3]}}
        span.glyphicon.glyphicon-ok.pull-right(style= "display: {{leave.type == leaveTypes[3].type ? 'inline-block' : 'none'}}")

    li(style= "display: {{ showContextMenu ? 'block' : 'none'}}")
