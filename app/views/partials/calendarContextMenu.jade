ul.dropdown-menu.calendar-context-menu(role='menu')
    
    li(style= "display: {{ showContextMenu ? 'block' : 'none'}}")
      a(ng-click="applyLeave(cell.date, contextMenuOptions[0], {{ leave.type == leaveTypes[0].type ? '0' : '1'}})") 
        {{contextMenuOptions[0]}}
        span.glyphicon.glyphicon-ok.pull-right(style= "display: {{ leave.type == leaveTypes[0].type? 'inline-block' : 'none'}}")
    li(style= "display: {{ showContextMenu ? 'block' : 'none'}}")
      a(ng-click="applyLeave(cell.date, contextMenuOptions[1], {{ leave.type == leaveTypes[1].type ? '0': '1'}})") 
        {{contextMenuOptions[1]}}
        span.glyphicon.glyphicon-ok.pull-right(style= "display: {{leave.type == leaveTypes[1].type ? 'inline-block' : 'none'}}")


    li(style= "display: {{ showContextMenu ? 'block' : 'none'}}")
