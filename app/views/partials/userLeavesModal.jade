.modal-header
  button.close(type='button', ng-click='cancel()', aria-label='Close')
    span(aria-hidden='true') Ã—
  h4.modal-title  Leaves: {{ date | date:"MMMM d"}}

div(ng-hide = "!day_leaves ||day_leaves.length == 0")
    table.table
      tr
        th 
        th Name
        th Time-Off Type
        th Remarks
        th File Date
      tr(ng-repeat="leave in day_leaves track by $index")
        td {{ $index + 1 }}
        td {{leave.user.username }}
        td {{leave.type }}
        td {{leave.remarks }}
        td {{leave.filedate | date:'medium' }}
.modal-body(ng-show = "!day_leaves || day_leaves.length == 0")
  p No leaves for this day